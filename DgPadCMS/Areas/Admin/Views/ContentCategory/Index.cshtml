@model IEnumerable<Common.ContentCategory>

@{
    ViewData["Title"] = "Category";
}
<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<h1>Category</h1>
<br />
<p>
    <a class="btn btn-outline-success" asp-action="Create"> <i class="bi bi-plus-circle-fill"></i> Create Category</a>
</p>
<table class="table sortable">
    <thead>
        <tr  class="table-success">
            <th>Id</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tax in Model)
        {
            <tr  class="table-light">
                <td>@tax.CategoryId</td>
                <td>@tax.CategoryName</td>
                <td>
                    
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@tax.CategoryId" onclick="return confirm('Are you sure you want to delete this item?');"> 
                        <i class="bi bi-trash3-fill"></i></a> |
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@tax.CategoryId">
                        <i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

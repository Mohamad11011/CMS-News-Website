@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}
<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<h1>Roles</h1>
<br />

<p>
     <a class="btn btn-outline-success" asp-action="Create"> <i class="bi bi-plus-square-fill"></i> Create Role</a>
</p>
<table class="table sortable">
    <thead>
        <tr class="table-success">
            <th>Role</th>
        
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr  class="table-light">
                <td>@role.Name</td>
                @*<td i-role="@role.Id"></td>*@
                <td>

                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id" onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="bi bi-trash3-fill"></i></a> |
                    <a class="btn btn-sm btn-outline-primary" asp-action="Update" asp-route-id="@role.Id"><i class="bi bi-person-check-fill"></i> Assign Role</a>
                <td>
            </tr>
        }
    </tbody>
</table>

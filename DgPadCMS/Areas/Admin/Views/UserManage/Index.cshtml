@model IEnumerable<Common.AppUser>

@{
    ViewData["Title"] = "Users";
}
<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<h1>Users</h1>

<br />
<p>
    <a class="btn btn-outline-success" asp-controller="UserManage" asp-action="AddUser"><i class="bi bi-person-plus-fill"></i> Add User</a>
</p>

<table class="table sortable">
    <thead>
        <tr  class="table-success">
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model) {
        <tr  class="table-light">
            <td>
                @user.UserName
            </td>
            <td>
                @user.Email
            </td>
            <td>

                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure you want to delete this user?');">
                    <i class="bi bi-trash3-fill"></i> </a> 
                


            </td>
        </tr>
}
    </tbody>
</table>


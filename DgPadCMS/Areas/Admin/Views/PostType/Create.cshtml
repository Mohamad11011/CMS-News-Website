@model Common.PostType

@{
    ViewData["Title"] = "Create a PostType";
}

<h2>Create a PostType</h2>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" name="Title" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="TaxonomyId" class="control-label"></label>
                <select asp-for="TaxonomyId" asp-items="@ViewBag.TaxonomyId" class="form-control">
                    <option value="0">Choose a Taxonomy</option>
                </select>
                <span asp-validation-for="TaxonomyId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
   <button type="button" class="btn btn-danger">
       <a asp-action="Index">Back to List</a>
       </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

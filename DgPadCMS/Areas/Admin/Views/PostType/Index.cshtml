@model IEnumerable<Common.PostType>

@{
    ViewData["Title"] = "PostType";
}
<script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
<h1>PostType(s)</h1>
<br />
<p>
    <a class="btn btn-outline-success" asp-action="Create"><i class="bi bi-plus-square-fill"></i> Add PostType</a>
</p>
<table class="table sortable">
    <thead>
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(model => model.PostTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.PostTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            
            <td>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.PostTypeId" onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="bi bi-trash3-fill"></i></a> |
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.PostTypeId"><i class="bi bi-pencil-square"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
